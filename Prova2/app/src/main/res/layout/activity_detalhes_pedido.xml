    <TextView
        android:id="@+id/txt_detalhes_pedido_pagamento_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="EndereÃ§o"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txt_detalhes_pedido_pagamento"
        app:layout_constraintTop_toBottomOf="@+id/txt_detalhes_pedido_pagamento" />

    <TextView
        android:id="@+id/txt_detalhes_pedido_pagamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/txt_detalhes_pedido_pagamento_tv"
        app:layout_constraintTop_toBottomOf="@+id/txt_detalhes_pedido_pagamento_tv" />

    <TextView
        android:id="@+id/txt_detalhes_pedido_endereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/txt_detalhes_pedido_pagamento_tv2"
        app:layout_constraintTop_toBottomOf="@+id/txt_detalhes_pedido_pagamento_tv2" />


